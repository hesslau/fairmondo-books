{
    "name": "hesslau/fairmondobooks",
    "description": "FairmondoBooks",
    "keywords": ["fairmondo", "libri"],
    "license": "NOT SET",
    "type": "project",
    "require": {
        "php": ">=7.0",
        "laravel/framework": "5.3.*",
        "kjantzer/ponipar" : ">=0.1.0",
        "league/csv": ">=8.1.2",
        "rap2hpoutre/laravel-log-viewer": "^0.8.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "autoload": {
        "classmap": [
            "database",
            "tests"
        ],
        "psr-0": {
            "PONIpar": "src"
        },
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "mkdir storage/app/download storage/app/annotations storage/app/media storage/app/export"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
